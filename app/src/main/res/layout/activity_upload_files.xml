<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <!--  Header  Starts-->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:orientation="vertical"
                    android:padding="10dip">
                    <!-- Full Name Label -->

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnUploadCentralDegree"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Scan Central Degree" />

                    <!--<TextView-->
                    <!--android:id="@+id/upload_CentralDegree_status"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="16dp"-->
                    <!--android:text=""-->
                    <!--android:textColor="#372c24" />-->

                    <Button
                        android:id="@+id/btnUploadOfferLetter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Scan Offer Letter" />


                    <TextView
                        android:id="@+id/upload_status"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:textColor="#b71c1c" />

                    <!--<Button-->
                    <!--android:id="@+id/btnMainpage"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="10dip"-->
                    <!--android:text="Go to mainpage" />-->

                    <Button
                        android:id="@+id/btnUpload"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:enabled="false"
                        android:visibility="invisible"
                        android:textColor="#fff"
                        android:text="Upload" />

                    <ImageView
                        android:id="@+id/scannedImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        />


                </LinearLayout>
                <!--  Header Ends -->
                <!-- Footer Start -->
                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip">
                    <!--android:background="@layout/header_gradient"-->
                    <!-- Logo Start-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip" />
                    <!-- Logo Ends -->
                </LinearLayout>
                <!--android:background="@layout/footer_repeat"-->
                <!-- Footer Ends -->

                <!-- Upload Files Buttons -->
                <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="fill_parent"
                    android:layout_height="90dip"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"></LinearLayout>
                <!-- Registration Form Ends -->
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>